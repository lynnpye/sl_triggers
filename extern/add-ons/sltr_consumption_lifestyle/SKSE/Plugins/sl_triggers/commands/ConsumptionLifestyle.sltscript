set $checkFormID "TFECompactingPotion"
gosub consumecheck
set $checkFormID "TFECurvesPotion"
gosub consumecheck
set $checkFormID "TFEFlatteningPotion"
gosub consumecheck
set $checkFormID "TFENippleIncreasePotion"
gosub consumecheck
set $checkFormID "TFENippleReducePotion"
gosub consumecheck
