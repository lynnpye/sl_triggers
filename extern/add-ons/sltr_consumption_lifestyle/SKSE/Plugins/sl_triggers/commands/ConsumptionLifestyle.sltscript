beginsub consumecheck
	set $itemCount resultfrom objectreference_dofunction $system.player GetItemCount $checkFormID
	if $itemCount > 0
		inc $foundItems 1
		while $itemCount > 0
			inc $itemCount -1
			item_equip $system.player $checkFormID false false
		endwhile
	endif
endsub

set $playerName resultfrom actor_name $system.player
deb_msg $"Scanning {$playerName} inventory for that consumption lifestyle."

set $foundItems 0
set $consumedItems 0
set $checkFormID "TFEResetPotion"
gosub consumecheck
