; this runs after a container has been closed
; $request.core.activatedContainer
;   .is_corpse  ; don't care
;   .is_empty   ; don't care
;   .is_common  ; don't care
beginsub checksub
	set $itemCount resultfrom objectreference_dofunction $request.core.activatedContainer GetItemCount $checkFormID
	if $itemCount > 0
		inc $foundItems 1
        item_remove $request.core.activatedContainer $checkFormID $itemCount false $system.player
	endif
endsub

if $request.core.activatedContainer == none
    deb_msg $"$request.core.activatedContainer is 'none'; did you run this outside the 'On Container Activate' event?"
    return
endif

